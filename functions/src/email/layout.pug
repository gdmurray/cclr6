html
    head
        title CCLR6 - #{title}
        meta(name="color-scheme" content="only")
        link(rel="stylesheet", href="styles/email.css", data-inline)
        link(rel="shortcut icon" type="image/x-icon" href="assets/ccl-logo-leaf-red.svg")

    block scripts
    body
        table(id="main")
            tbody
                tr
                    td(id="bg" bgcolor="#0F172A" class="darkmode")
                        table(id="innermain")
                            tbody
                                tr
                                    td(align="center")
                                        table
                                            tbody
                                                tr
                                                    td(id="logo" align="center")
                                                        img(src="assets/ccl-logo-leaf-white.svg" width=100 alt="logo")
                                                        div
                                                            img(src="assets/ccl_logo.png" width=100 alt="CCLR6")

                                        table(id="content" cellpadding=0 cellspacing=0 border=0 bgcolor="#ffffff")
                                            tbody
                                                tr
                                                    td(height=40)
                                                tr
                                                    td(class="content" colspan=2 valign="top" align="center" )
                                                        table(width="100%" cellpadding=0 cellspacing=0 border=0 bgcolor="#FFFFFF")
                                                            tbody
                                                                block content
                                                tr
                                                    td(height=40)
                                        table(id="footer")
                                            tbody
                                                tr
                                                    td(height=20)
                                                tr
                                                    td(id="footer-links" align="center")
                                                        a.link-button(href=`${website}` target='_blank' rel='noopener')
                                                            img(src=`assets/footer/link.svg` width="15" style="top: 1px;")
                                                        a.link-button(href=`${twitter}` target='_blank' rel='noopener')
                                                            img(src=`assets/footer/twitter.svg` width="15" style="top: 1px;")
                                                        a.link-button(href=`${twitch}` target='_blank' rel='noopener')
                                                            img(src=`assets/footer/twitch.svg` width="15" style="top: 1px;")
                                                        a.link-button(href=`${discord}` target='_blank' rel='noopener')
                                                            img(src=`assets/footer/discord.svg` width="15" style="top: 1px;")
                                                        a.link-button(href=`mailto:${contact_email}` target='_blank' rel='noopener')
                                                            img(src=`assets/footer/mail.svg` width="15" style="top: 1px;")
                                                tr
                                                    td(height=10)
                                                tr
                                                    td(align="center")
                                                        p.signature CCLR6 #{year}